<%- include ("../partials/header") %>
<%- include ("../partials/main_nav") %>

<div class="container">
    <div class="row">
        <div class ="offset-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="post">

                <div class="form-group">
                    <label for="nameTextField">Book Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Book Title"
                    name="Name" required>

                </div>

                <div class="form-group">
                    <label for="authorTextField">Book Title</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the Book Author"
                    name="Author" required>
                    
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Year</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter the year of publication"
                    name="Published" required>
                    
                </div>

                <div class="form-group">
                    <label for="descTextField">Description</label>
                    <textarea type="text" class="form-control"
                    id="descTextField"
                    placeholder="Enter the description of the book"
                    name="Description" required> </textarea>
                    
                </div>

                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="number" class="form-control"
                    id="priceTextField"
                    placeholder="Enter the price"
                    name="Price" required>
                    
                </div>
                <br>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i>Submit</button>

                <a href ="/book-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i>Cancel</a>

            </form>
        </div>
    </div>
</div>


<%- include ("../partials/bottom_nav") %>